{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Electron Renderer release",
			"type": "hxml",
			"file": "renderer.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"presentation": {
				"reveal": "never",
				"panel": "shared",
				"clear": false,
				"revealProblems": "onProblem"
			},
			"group": "build"
		},
		{
			"label": "Electron Renderer debug",
			"type": "hxml",
			"file": "renderer.debug.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"presentation": {
				"reveal": "never",
				"panel": "shared",
				"clear": false,
				"revealProblems": "onProblem"
			},
			"group": "build"
		},
		{
			"label": "Electron Main release",
			"type": "hxml",
			"file": "main.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"presentation": {
				"reveal": "never",
				"panel": "shared",
				"clear": false,
				"revealProblems": "onProblem"
			},
			"group": "build"
		},
		{
			"label": "Electron Main debug",
			"type": "hxml",
			"file": "main.debug.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"presentation": {
				"reveal": "never",
				"panel": "shared",
				"clear": false,
				"revealProblems": "onProblem"
			},
			"group": "build"
		},
		{
			"type": "haxe",
			"args": "active configuration",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
				"panel": "shared",
				"clear": false,
				"revealProblems": "onProblem"
			},
			"label": "haxe: active configuration"
		},
		{
			"label": "scss watch",
			"type": "shell",
			"problemMatcher": "$node-sass",
			"command": "sass --watch ${workspaceFolder}/app/assets/css/app.scss ${workspaceFolder}/app/assets/css/app.min.css --style compressed",
		}
	]
}